&lt;script>
const images = ["https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/burnham.jpg","https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/chicago_street.jpeg","https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/denver_parking.jpg","https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/denver_zoo.jpg","https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/kodak_bird.jpg","https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/kranner_afternoon.jpg","https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/la_downtown.jpg","https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/oh_teton.jpg","https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/riding.jpg","https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/teton_chair.jpeg","https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/teton_girl.jpeg","https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/the_play.jpeg","https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/yellow-flower.jpeg","https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/yellowstone-liao.jpeg","https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/%E5%8D%88%E5%90%8E.jpeg","https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/%E5%98%89.jpg","https://lostnatsu.com/myimgs/%E6%96%B0%E7%94%9F%E5%91%BD/%E7%A7%8B%E6%9C%AB%E7%9A%84%E7%BB%BF%E8%89%B2.jpg"];
